<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forecast_list_layout"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/weather_card"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_date_field_list"
            style="@style/TextAppearance.AppCompat.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/weather_horizontal_margin"
            android:layout_weight="0.62"
            android:elevation="5dp"
            android:textSize="14sp"
            android:fontFamily="@font/pacifico_regular"
            android:gravity="start|center_vertical"
            android:textAlignment="gravity"
            android:textColor="@color/colorText"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/weather_icon_list"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/weather_horizontal_margin"
            android:contentDescription="@string/weather_icon"
            android:elevation="5dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/current_temperature_field_list"
            style="@style/weatherText"
            android:layout_marginStart="@dimen/weather_horizontal_margin"
            android:elevation="5dp"
            android:text="@string/temperature"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/current_pressure_field_list"
            style="@style/weatherText"
            android:layout_marginStart="@dimen/weather_horizontal_margin"
            android:elevation="5dp"
            android:text="@string/temperature"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/current_humanity_field_list"
            style="@style/weatherText"
            android:layout_marginStart="@dimen/weather_horizontal_margin"
            android:elevation="5dp"
            android:text="@string/temperature"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/weather_card"
        android:layout_marginTop="@dimen/divider_vertical_margin"
        android:background="@color/colorText" />
</RelativeLayout>